<Application x:Class="TestApp.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:jc="clr-namespace:JungleControls;assembly=JungleControls"
             xmlns:a="clr-namespace:TestApp"
             StartupUri="MainWindow.xaml">
    <Application.Resources>
        <a:DesignViewModelLocator x:Key="Locator"/>
        <Style TargetType="{x:Type TabControl}">
            <Setter Property="Padding" Value="5" />
        </Style>
        <Style TargetType="{x:Type jc:StatCounter}">
            <Setter Property="Margin" Value="5" />
        </Style>
        <Style TargetType="{x:Type jc:SelectableTextBlock}">
            <Setter Property="Margin" Value="5" />
        </Style>
        <Style TargetType="{x:Type jc:PropertySheet}">
            <Setter Property="HeaderMargin" Value="5,5,15,5" />
            <Setter Property="HeaderFontWeight" Value="Bold" />
            <Setter Property="CellMargin" Value="5" />
        </Style>
    </Application.Resources>
</Application>
