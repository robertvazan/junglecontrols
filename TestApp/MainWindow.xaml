<Window x:Class="TestApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:a="clr-namespace:TestApp"
        Title="MainWindow" Height="700" Width="600">
    <TabControl>
        <TabItem Header="PropertySheet">
            <a:PropertySheetView />
        </TabItem>
        <TabItem Header="StatCounter">
            <a:StatCounterSampleView />
        </TabItem>
        <TabItem Header="SelectableTextBlock">
            <a:SelectableTextBlockView />
        </TabItem>
        <TabItem Header="DelayedContentControl">
            <a:DelayedContentControlView />
        </TabItem>
        <TabItem Header="LazyControl">
            <a:LazyControlView />
        </TabItem>
        <TabItem Header="ExposeControl">
            <a:ExposeControlView />
        </TabItem>
        <TabItem Header="PrecisePopup" IsSelected="True">
            <a:PrecisePopupView />
        </TabItem>
    </TabControl>
</Window>
