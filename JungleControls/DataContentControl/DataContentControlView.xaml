<UserControl x:Class="JungleControls.DataContentControlView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:diagnostics="clr-namespace:System.Diagnostics;assembly=WindowsBase"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300"
             x:Name="ControlRoot"
             x:ClassModifier="internal">
    <ContentControl Content="{Binding DataContext.Content, ElementName=ControlRoot}" ContentStringFormat="{Binding DataContext.ContentStringFormat, ElementName=ControlRoot}" ContentTemplate="{Binding DataContext.ContentTemplate, ElementName=ControlRoot}" ContentTemplateSelector="{Binding DataContext.ContentTemplateSelector, ElementName=ControlRoot}" DataContext="{Binding DataContext.ContentDataContext, ElementName=ControlRoot}" />
</UserControl>
