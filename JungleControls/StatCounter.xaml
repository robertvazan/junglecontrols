<UserControl x:Class="JungleControls.StatCounter"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">
    <Grid HorizontalAlignment="Center" VerticalAlignment="Center">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>
        <TextBlock Grid.Row="{Binding HeaderRow}" Text="{Binding Control.Header}" FontSize="{Binding Control.HeaderFontSize}" Foreground="{Binding Control.HeaderForeground}" HorizontalAlignment="{Binding Control.HeaderAlignment}" FontWeight="{Binding Control.HeaderFontWeight}" Margin="{Binding HeaderMargin}" />
        <TextBlock Grid.Row="{Binding DataRow}" Text="{Binding Data}" FontSize="{Binding Control.DataFontSize}" Foreground="{Binding Control.DataForeground}" HorizontalAlignment="{Binding Control.DataAlignment}" FontWeight="{Binding Control.DataFontWeight}" Margin="{Binding DataMargin}" />
    </Grid>
</UserControl>
